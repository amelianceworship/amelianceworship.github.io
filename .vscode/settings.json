{
	// "editor.quickSuggestions": {
	// 	"strings": true
	// },
	// hide folders in search
	"search.exclude": {
		"**/node_modules": true
	},

	// format on save eslint
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true
	},
	// "editor.lineNumbers": "off",
	//  "editor.folding": false,
  	// "editor.glyphMargin": false,

  	// Enable per-language
	"[scss]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "sibiraj-s.vscode-scss-formatter"
	},
	"[css]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "sibiraj-s.vscode-scss-formatter"
	},
	"editor.formatOnPaste": false,
	"files.eol": "\n",
	"oneLineComments.customCommentTags": {
		"javascriptreact": {
			"outer_start": "{/*",
			"outer_end": "*/}",
			"inner_start": "/~~",
			"inner_end": "~~/"
		},
		"typescriptreact": {
			"outer_start": "{/*",
			"outer_end": "*/}",
			"inner_start": "/~~",
			"inner_end": "~~/"
		}
	},
	"cSpell.language": "en,uk,en-US",
	"cSpell.words": [
		"amelianceworship"
	],
	// "editor.formatOnSave": true,
	// "editor.defaultFormatter": "esbenp.prettier-vscode"
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true,
		"node_modules": true,
		"_legacy": true,
		".editorconfig": true,
		".eslintignore": true,
		".eslintrc.cjs": true,
		".gitignore": true,
		"package.json": true,
		"tsconfig.json": true,
		"vite.config.ts": true,
		"README.md": true,
		".vscode": true,
		"public": true,
		"index.html": true,
		"vite-env.d.ts": true,
		"src/vite-env.d.ts": true,
		".env.local": true
	},
	"explorerExclude.backup": {},
}
